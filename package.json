{
  "name": "priyang-react-component-lib",
  "version": "0.1.8",
  "private": false,
  "module": "dist/priyang-react-component-lib.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests --watch",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyzeMapper": "source-map-explorer 'dist/*.js'",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006 -s public",
    "pretty-Component": "yarn prettier -w ./src/lib/components",
    "lib": "bash lib.sh",
    "build-storybook": "build-storybook -s public",
    "build:tailwind": "postcss src/lib/styles/tailwind.css -o src/lib/styles/main.css",
    "build:tailwind-prod": "cross-env NODE_ENV=production postcss src/lib/styles/tailwind.css -o src/lib/styles/main.css",
    "clean": "rimraf dist",
    "compile": "npm run clean && cross-env NODE_ENV=production babel src/lib/ --out-dir dist --copy-files",
    "chromatic": "npx chromatic --project-token=16626241d43e"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "size-limit": [
    {
      "path": "dist/priyang-react-component-lib.cjs.production.min.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/priyang-react-component-lib.esm.js",
      "limit": "50 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.18.6",
